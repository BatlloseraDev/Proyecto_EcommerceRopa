<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ejercicio.proyecto_ecommerce.presentacion.VendedorController">
    <children>
        <Label layoutX="24.0" layoutY="25.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Lista de productos" />
        <ComboBox fx:id="productosComboBox" layoutX="24.0" layoutY="70.0" prefWidth="150.0" promptText="Selecciona un producto" />
        <TextField fx:id="productoSeleccionadoTextField" editable="false" layoutX="24.0" layoutY="120.0" promptText="Producto seleccionado" />
        <Button fx:id="venderButton" layoutX="24.0" layoutY="170.0" mnemonicParsing="false" onAction="#onVenderPressed" text="Vender" />
        <Button fx:id="salirButton" layoutX="24.0" layoutY="210.0" mnemonicParsing="false" onAction="#onSalirPressed" text="Salir" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ejercicio.proyecto_ecommerce.presentacion.AdminController">
    <children>
        <Label layoutX="24.0" layoutY="25.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Lista de usuarios" />

        <ComboBox fx:id="usuariosComboBox" layoutX="24.0" layoutY="70.0" prefWidth="250.0" promptText="Selecciona un usuario" />

        <TextField fx:id="usuarioSeleccionadoTextField" editable="false" layoutX="24.0" layoutY="120.0" promptText="Email del usuario" />
        <TextField fx:id="fechaLabel" layoutX="24.0" layoutY="162.0" promptText="fecha alta" />

        <Button fx:id="salirButton" layoutX="24.0" layoutY="210.0" mnemonicParsing="false" onAction="#onSalirPressed" text="Salir" />

    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</AnchorPane>
